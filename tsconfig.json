{
	"compilerOptions": {
		"checkJs": true,
		"allowJs": true,
		"target": "ES2017",
		"module": "ES2022",
		"lib": ["es2022", "DOM", "WebWorker", "DOM.Iterable"],
		"jsx": "react-jsx",
		"jsxImportSource": "@builder.io/qwik",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"incremental": true,
		"isolatedModules": true,
		"outDir": "tmp",
		"noEmit": true,
		"types": ["node", "vite/client"],
		"paths": {
			"~/*": ["./src/*"]
		},
		"plugins": [{ "name": "eslint-plugin-import-access" }]
	},
	"files": [
		"./commitlint.config.js",
		"./eslint.config.cjs",
		"./eslint.config.import.cjs",
		"./stylelint.config.js",
		"./stylelint.config.order.js",
		"./prettier.config.js",
		"./textlint.config.cjs",
		"./vite.config.ts"
	],
	"include": ["src", "./*.d.ts", "node_modules/better-typescript-lib/node_modules/@typescript/**/*.d.ts"]
}
