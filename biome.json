{
	"$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"files": {
		"ignore": [
			".yarn/",
			"!.yarn/releases",
			".vscode/*",
			"!.vscode/launch.json",
			"!.vscode/*.code-snippets",
			".idea/workspace.xml",
			".idea/usage.statistics.xml",
			".idea/shelf/",
			"dist/",
			"lib/",
			"lib-types/",
			"server/",
			"node_modules/",
			".cache/",
			".mf",
			".rollup.cache",
			"tsconfig.tsbuildinfo",
			".env",
			".env.production",
			"logs/",
			"*.log",
			"npm-debug.log*",
			"yarn-debug.log*",
			"yarn-error.log*",
			"pnpm-debug.log*",
			"lerna-debug.log*",
			".DS_Store"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"lineWidth": 160
	}
}
