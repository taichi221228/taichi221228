{
	"$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"files": {
		"ignore": [
			"dist",
			"lib",
			"lib-types",
			"server",
			"node_modules",
			"*.local",
			".cache",
			".mf",
			".rollup.cache",
			"tsconfig.tsbuildinfo",
			".yarn/*",
			"!.yarn/releases",
			"logs",
			"*.log",
			"npm-debug.log*",
			"yarn-debug.log*",
			"yarn-error.log*",
			"pnpm-debug.log*",
			"lerna-debug.log*",
			".vscode/*",
			".idea/workspace.xml",
			".idea/usage.statistics.xml",
			".idea/shelf",
			"*.suo",
			"*.ntvs*",
			"*.njsproj",
			"*.sln",
			"*.sw?",
			".DS_Store"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"lineWidth": 160
	}
}
