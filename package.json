{
	"name": "taichi-fukuda",
	"description": "This is a personal website of Taichi Fukuda.",
	"engines": {
		"bun": ">=1.1.34"
	},
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite --mode ssr",
		"dev.debug": "node --inspect-brk node_modules/vite/bin/vite.js --mode ssr --force",
		"build": "qwik build",
		"build.client": "vite build",
		"build.preview": "vite build --ssr src/entry.preview.tsx",
		"start": "vite --open --mode ssr",
		"preview": "qwik build preview && vite preview --open",
		"deploy": "echo 'Run \"npm run qwik add\" to install a server adapter'",
		"compile": "tsc --incremental --noEmit",
		"lint": "concurrently -n \"eslint,biome,stylelint,textlint\" -c \"#4831BD,#61A5FA,#7A8387,#259EAC\" \"eslint --cache --cache-location node_modules/.cache/eslint .\" \"bunx @biomejs/biome lint .\" \"stylelint --ignore-path \\\".gitignore\\\" \\\"**/*.css\\\"\" \"textlint -c \\\"textlint.config.cjs\\\" --ignore-path \\\".gitignore\\\" \\\"**/*.md\\\"\"",
		"lint.fix": "concurrently -n \"eslint,biome,stylelint,textlint\" -c \"#4831BD,#61A5FA,#7A8387,#259EAC\" \"eslint --cache --cache-location node_modules/.cache/eslint . --fix\" \"bunx @biomejs/biome lint . --write\" \"stylelint --ignore-path \\\".gitignore\\\" \\\"**/*.css\\\" --fix\" \"textlint -c \\\"textlint.config.cjs\\\" --ignore-path \\\".gitignore\\\" \\\"**/*.md\\\" --fix\"",
		"lint.strict": "concurrently -n \"eslint,biome,stylelint,textlint\" -c \"#4831BD,#61A5FA,#7A8387,#259EAC\" \"eslint .\" \"bunx @biomejs/biome lint . --write\" \"stylelint --ignore-path \\\".gitignore\\\" \\\"**/*.css\\\" --fix\" \"textlint -c \\\"textlint.config.cjs\\\" --ignore-path \\\".gitignore\\\" \\\"**/*.md\\\" --fix\"",
		"format": "concurrently -n \"prettier,biome\" -c \"#F8BC45,#61A5FA\"  \"prettier --cache . --write\" \"bunx @biomejs/biome format . --write\"",
		"format.check": "concurrently -n \"prettier,biome\" -c \"#F8BC45,#61A5FA\"  \"prettier --cache . --check\" \"bunx @biomejs/biome format .\"",
		"format.strict": "concurrently -n \"prettier,biome\" -c \"#F8BC45,#61A5FA\"  \"prettier . --write\" \"bunx @biomejs/biome format .\"",
		"prepare": "husky && panda codegen"
	},
	"dependencies": {
		"@builder.io/qwik": "^1.4.5",
		"@builder.io/qwik-city": "^1.4.5",
		"@fontsource/fira-code": "^5.0.16",
		"@modular-forms/qwik": "^0.28.0",
		"@unocss/reset": "^0.63.0",
		"remixicon": "^4.1.0",
		"resend": "^4.0.0",
		"shiki": "^1.10.3"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.6.1",
		"@builder.io/vite-plugin-macro": "~0.0.7",
		"@commitlint/cli": "^19.2.2",
		"@commitlint/config-conventional": "^19.2.2",
		"@eslint/js": "^9.13.0",
		"@pandacss/dev": "^0.46.0",
		"@pandacss/eslint-plugin": "^0.2.2",
		"@textlint-rule/textlint-rule-no-duplicate-abbr": "^1.0.2",
		"@textlint-rule/textlint-rule-no-unmatched-pair": "^2.0.2",
		"@types/eslint": "^8.56.0",
		"@types/eslint__js": "^8.42.3",
		"@types/node": "^22.0.0",
		"@typescript-eslint/eslint-plugin": "^8.0.0",
		"@typescript-eslint/parser": "^8.0.0",
		"better-typescript-lib": "^2.7.0",
		"concurrently": "^9.0.0",
		"eslint": "^8.56.0",
		"eslint-config-flat-gitignore": "0.3.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-import-access": "^2.2.0",
		"eslint-plugin-qwik": "^1.4.5",
		"globals": "^15.11.0",
		"husky": "^9.0.11",
		"postcss-load-config": "^6.0.1",
		"prettier": "^3.2.4",
		"prettier-plugin-scaffdog": "^4.0.0",
		"scaffdog": "^4.0.0",
		"stylelint": "^16.2.1",
		"stylelint-config-standard": "^36.0.0",
		"stylelint-order": "^6.0.4",
		"textlint": "^14.0.3",
		"textlint-rule-alex": "^5.0.0",
		"textlint-rule-alive-link": "^0.1.2",
		"textlint-rule-apostrophe": "^2.0.0",
		"textlint-rule-diacritics": "^2.0.0",
		"textlint-rule-doubled-spaces": "^1.0.2",
		"textlint-rule-en-capitalization": "^2.0.3",
		"textlint-rule-footnote-order": "^1.0.3",
		"textlint-rule-no-zero-width-spaces": "^1.0.1",
		"textlint-rule-preset-ja-spacing": "^2.3.0",
		"textlint-rule-preset-japanese": "^10.0.3",
		"textlint-rule-preset-jtf-style": "^2.3.14",
		"typescript": "5.6.3",
		"typescript-eslint": "^8.10.0",
		"undici": "*",
		"vite": "^6.0.0",
		"vite-tsconfig-paths": "^5.0.0"
	},
	"trustedDependencies": ["sharp"]
}
