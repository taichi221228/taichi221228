{
	"name": "taichi-fukuda",
	"description": "This is a personal website of Taichi Fukuda.",
	"engines": {
		"node": ">=15.0.0"
	},
	"private": true,
	"type": "module",
	"scripts": {
		"build": "qwik build",
		"build.client": "vite build",
		"build.preview": "vite build --ssr src/entry.preview.tsx",
		"build.types": "tsc --incremental --noEmit",
		"deploy": "echo 'Run \"npm run qwik add\" to install a server adapter'",
		"dev": "vite --mode ssr",
		"dev.debug": "node --inspect-brk ./node_modules/vite/bin/vite.js --mode ssr --force",
		"format": "concurrently -n \"prettier,biome\" -c \"#F8BC45,#61A5FA\"  \"prettier --write .\" \"bunx @biomejs/biome format --write .\"",
		"format.check": "concurrently -n \"prettier,biome\" -c \"#F8BC45,#61A5FA\"  \"prettier --check .\" \"bunx @biomejs/biome format .\"",
		"lint": "concurrently -n \"eslint,biome,stylelint,textlint\" -c \"#4831BD,#61A5FA,#FFF,#259EAC\" \"ESLINT_USE_FLAT_CONFIG=false eslint -c \\\"./eslint.config.cjs\\\" \\\"**/*.{js,cjs,mjs,jsx,ts,cts,mts,tsx}\\\"\" \"bunx @biomejs/biome lint .\" \"stylelint \\\"**/*.css\\\"\" \"textlint -c \\\"./textlint.config.cjs\\\" \\\"**/*.md\\\"\"",
		"lint.fix": "concurrently -n \"eslint,biome,stylelint,textlint\" -c \"#4831BD,#61A5FA,#FFF,#259EAC\" \"ESLINT_USE_FLAT_CONFIG=false eslint -c \\\"./eslint.config.cjs\\\" --fix \\\"**/*.{js,cjs,mjs,jsx,ts,cts,mts,tsx}\\\"\" \"bunx @biomejs/biome lint --write .\" \"stylelint --fix \\\"**/*.css\\\"\" \"textlint -c \\\"./textlint.config.cjs\\\" --fix \\\"**/*.md\\\"\"",
		"prebuild.pandacss": "panda codegen --silent",
		"prepare": "husky",
		"preview": "qwik build preview && vite preview --open",
		"start": "vite --open --mode ssr",
		"qwik": "qwik"
	},
	"dependencies": {
		"@builder.io/qwik": "^1.4.5",
		"@builder.io/qwik-city": "^1.4.5",
		"@fontsource/fira-code": "^5.0.16",
		"@modular-forms/qwik": "^0.28.0",
		"@unocss/reset": "^0.63.0",
		"remixicon": "^4.1.0",
		"resend": "^4.0.0",
		"shiki": "^1.10.3"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.6.1",
		"@builder.io/vite-plugin-macro": "~0.0.7",
		"@commitlint/cli": "^19.2.2",
		"@commitlint/config-conventional": "^19.2.2",
		"@pandacss/dev": "^0.46.0",
		"@textlint-rule/textlint-rule-no-duplicate-abbr": "^1.0.2",
		"@textlint-rule/textlint-rule-no-unmatched-pair": "^2.0.2",
		"@types/eslint": "^8.56.2",
		"@types/node": "^22.0.0",
		"@typescript-eslint/eslint-plugin": "^8.0.0",
		"@typescript-eslint/parser": "^8.0.0",
		"better-typescript-lib": "^2.7.0",
		"concurrently": "^9.0.0",
		"eslint": "^8.56.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-import-access": "^2.2.0",
		"eslint-plugin-qwik": "^1.4.5",
		"husky": "^9.0.11",
		"postcss-load-config": "^6.0.1",
		"prettier": "^3.2.4",
		"prettier-plugin-scaffdog": "^4.0.0",
		"scaffdog": "^4.0.0",
		"stylelint": "^16.2.1",
		"stylelint-config-standard": "^36.0.0",
		"stylelint-order": "^6.0.4",
		"textlint": "^14.0.3",
		"textlint-rule-alex": "^5.0.0",
		"textlint-rule-alive-link": "^0.1.2",
		"textlint-rule-apostrophe": "^2.0.0",
		"textlint-rule-diacritics": "^2.0.0",
		"textlint-rule-doubled-spaces": "^1.0.2",
		"textlint-rule-en-capitalization": "^2.0.3",
		"textlint-rule-footnote-order": "^1.0.3",
		"textlint-rule-no-zero-width-spaces": "^1.0.1",
		"textlint-rule-preset-ja-spacing": "^2.3.0",
		"textlint-rule-preset-japanese": "^10.0.3",
		"textlint-rule-preset-jtf-style": "^2.3.14",
		"typescript": "5.6.3",
		"undici": "*",
		"vite": "^5.0.12",
		"vite-tsconfig-paths": "^5.0.0"
	},
	"trustedDependencies": ["sharp"]
}
